{
	"name": "{{package.vendor}}/{{package.name}}",
    "description": "{{wp.description}}",
	"homepage": "{{company.url}}",
	"version": "{{wp.version}}",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
	"prefer-stable": true,
	"minimum-stability": "dev",
	"authors": [
		{
			"name": "{{author.name}}",
			"email": "{{author.email}}",
			"homepage": "{{author.url}}"
		}
	],
	"require": {
		"php": ">=7.4",
		"awesome9/framework": "dev-main"
	},
	"require-dev": {
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"wp-coding-standards/wpcs": "^3.0.0",
		"wp-phpunit/wp-phpunit": "^6.3",
		"yoast/phpunit-polyfills": "^1.0"
	},
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"autoload": {
		"classmap": [
			"includes/"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"composer global require wp-cli/wp-cli",
			"composer global require wp-cli/i18n-command"
		],
		"test": "phpunit",
		"test-install": "bash bin/install-wp-tests.sh wordpress_test root 'root' 127.0.0.1 latest"
	}
}
