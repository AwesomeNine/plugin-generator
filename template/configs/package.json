{
	"name": "{{package.name}}",
	"title": "{{wp.name}}",
	"description": "{{wp.description}}",
	"homepage": "{{company.url}}",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/awesome9/{{package.name}}.git"
	},
	"author": "{{author.name}}",
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/awesome9/{{package.name}}/issues"
	},
	"scripts": {
		"build": "npx wp-awesome build",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:php": "./bin/phpcs.sh",
		"lint:staged": "lint-staged",
		"prepare": "husky",
		"start": "wp-scripts start",
		"start:hot": "wp-scripts start --hot",
		"update": "wp-scripts packages-update",
		"test:unit": "wp-scripts test-unit-js",
		"test:playwright": "wp-scripts test-playwright",
		"test:playwright:help": "wp-scripts test-playwright --help",
		"test:playwright:debug": "wp-scripts test-playwright --debug",
		"test:playwright:headed": "wp-scripts test-playwright --headed"
	},
	"devDependencies": {
	},
	"lint-staged": {
		"*.js": [
			"npm run format",
			"npm run lint:js"
		],
		"*.(sa|sc|c)ss": [
			"npm run format",
			"npm run lint:css"
		],
		"*.php": "npm run lint:php",
		"*.md": "npm run format"
	}
}
